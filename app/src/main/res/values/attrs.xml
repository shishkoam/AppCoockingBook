<resources>
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="MenuGroup">
        <attr name="labelText" format="string"/>
        <attr name="infoText" format="string"/>
        <attr name="labelColor" format="color|reference"/>
        <attr name="infoColor" format="color|reference"/>
        <attr name="backgroundColor" format="color|reference"/>
        <attr name="labelSize"  format="dimension"/>

        <attr name="iconLeft" format="reference"/>
        <attr name="iconRight0" format="reference"/>
        <attr name="iconRight1" format="reference"/>
        <attr name="iconRight2" format="reference"/>

        <attr name="showMenu" format="boolean" />
        <attr name="menuIcon" format="reference" />
        <attr name="menuPosition" format="string">
            <flag name="first" value="0"/>
            <flag name="second" value="1"/>
            <flag name="third" value="2"/>
        </attr>
        <attr name="menuRef" format="reference" />

        <attr name="expandable" format="boolean"/>
        <attr name="expanded" format="boolean"/>
        <attr name="need_confirm" format="boolean"/>
        <attr name="dialogMode" format="boolean"/>
    </declare-styleable>

    <attr name="btn_customStyle" format="reference" />
    <attr name="selected_color" format="reference|color" />

</resources>
